        <script>
            // Conteneur principal
            const app = document.getElementById('app');

            // Données fictives pour démonstration
            const regions = [
                {
                    name: "Rabat-Salé-Zemmour-Zaër",
                    imgSrc: "https://siredd.environnement.gov.ma/Rabat-Sale-Kenitra/Files/carteVisite/Decoupage_administratif.png",
                    communes: [{ name: "Commune A", population: 5000 }, { name: "Commune B", population: 8000 }]
                },
                {
                    name: "Tanger-Tétouan-Al Hoceima",
                    imgSrc: "https://siredd.environnement.gov.ma/Tanger-Tetouan-AlHoceima/Files/carteVisite/Tanger%20-%20Copie.png",
                    communes: [{ name: "Commune C", population: 7000 }, { name: "Commune D", population: 9000 }]
                },
                {
                    name: "Fès-Meknès",
                    imgSrc: "https://siredd.environnement.gov.ma/fes-meknes/Files/carteVisite/Decoupage_administratif.png",
                    communes: [{ name: "Commune E", population: 4000 }, { name: "Commune F", population: 6000 }]
                }
            ];

            // Fonction pour générer les sections dynamiquement
            function renderApp() {
                // Remplir le sélecteur de région
                const regionSelector = document.getElementById('regionSelector');
                regions.forEach(region => {
                    const option = document.createElement('option');
                    option.value = region.name;
                    option.textContent = region.name;
                    regionSelector.appendChild(option);
                });

                // Initialiser le titre, l'image et la table avec les données de la première région
                const firstRegion = regions[0];
                document.getElementById('regionTitle').textContent = `Statistiques de Population pour ${firstRegion.name}`;
                document.getElementById('regionImage').src = firstRegion.imgSrc; // Mettre la source de l'image
                document.getElementById('regionImage').style.display = 'block'; // Afficher l'image
                document.getElementById('populationTableBody').innerHTML = generateTableRows(firstRegion.communes);
                updateChart(firstRegion.communes);

                // Ajouter un événement pour mettre à jour les données lorsque l'utilisateur change de région
                regionSelector.addEventListener('change', (e) => {
                    const selectedRegion = regions.find(region => region.name === e.target.value);
                    document.getElementById('regionTitle').textContent = `Statistiques de Population pour ${selectedRegion.name}`;
                    document.getElementById('regionImage').src = selectedRegion.imgSrc; // Changer la source de l'image
                    document.getElementById('regionImage').style.display = 'block'; // Afficher l'image
                    document.getElementById('populationTableBody').innerHTML = generateTableRows(selectedRegion.communes);
                    updateChart(selectedRegion.communes);
                });
            }

            // Fonction pour générer les lignes du tableau
            function generateTableRows(communes) {
                return communes.map(commune => `
                            <tr>
                                <td>${commune.name}</td>
                                <td>${commune.population}</td>
                            </tr>
                        `).join('');
            }

            // Fonction pour mettre à jour le graphique
            function updateChart(communes) {
                const labels = communes.map(commune => commune.name);
                const data = communes.map(commune => commune.population);

                const ctx = document.getElementById('populationChart').getContext('2d');
                if (window.populationChart) window.populationChart.destroy(); // Détruire l'ancien graphique
                window.populationChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels,
                        datasets: [{
