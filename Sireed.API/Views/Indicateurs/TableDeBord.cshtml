        .hero {
            background-color: #f5f5f5;
            color: white;
            padding: 4px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            text-align: center;
        }

        .btn-custom {
            background-color: transparent;
            color: white;
            border-radius: 5px;
            padding: 10px 20px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #28a745;
            }

        .content-full-width {
            width: 100%;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: white;
            border-radius: 15px;
            color: #333;
            transition: all 0.3s ease;
        }

            .content-full-width:hover {
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            }

        #logo {
            max-width: 40%;
            height: auto;
        }

        .navbar {
            padding: 10px 30px;
            background-color: #343a40;
        }

        .navbar-brand {
            color: white !important;
            font-weight: 600;
        }

        .list-group-item {
            cursor: pointer;
            transition: background-color 0.3s ease;
            border: none;
            border-radius: 8px;
            padding: 12px 20px;
            margin: 5px 0;
        }

            .list-group-item:hover {
                background-color: #198754;
                color: white;
            }

            .list-group-item.selected {
                background-color: #198754;
                color: white;
            }

        .my-box {
            padding: 3px;
            margin-top: 3px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-home,
        .btn-privacy {
            background-color: #ff8c00;
            border: none;
            padding: 8px 16px;
            font-size: 14px;
            color: white;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .btn-home:hover,
            .btn-privacy:hover {
                background-color: #e07b00;
            }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">SIREDD</a>
            <div class="mx-auto">
                <img src="https://diplomatie.ma/sites/default/files/inline-images/logo-1_0.gif" alt="Logo" class="img-fluid" id="logo" style="width:80px">
            </div>
            <button class="btn btn-outline-light d-lg-none" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item d-none d-lg-block">
                        <button class="btn-custom">
                            <i class="fas fa-user"></i> Connexion
                        </button>
                    </li>
                </ul>
                <div class="mt-2 mt-lg-0">
                    <button class="btn-custom d-lg-none">
                        <i class="fas fa-user"></i> Connexion
                    </button>
                </div>
            </div>
        </div>
    </nav>
